{
    "$schema": "http://json-schema.org/draft-04/hyper-schema#",
    "title": "{{ title }}",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "readOnly": true,
            "links": [{ "rel": "full", "href": "/{{ type }}/{$}" }]
        }
    },
    "required": ["id"],
    "links": [
        { "rel": "instances", "href": "/{{ type }}/" },
        { "rel": "delete", "href": "/{{ type }}/{id}" },
        { "rel": "put", "href": "/{{ type }}/{id}" }
    ]
}
