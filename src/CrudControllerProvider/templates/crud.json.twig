{
    "$schema": "http://json-schema.org/draft-04/hyper-schema#",
    "title": "{{ title }}",
    "type": "object",
    "properties": {
        "id": {
            "allOf": [
                { "$ref": "#/definitions/id" },
                { "readOnly": true }
            ]
        }
    },
    "required": ["id"],
    "definitions": {
        "id": {
            "type": "string",
            "links": [{ "rel": "full", "href": "/{{ type }}/{$}" }]
        }
    }
    "links": [
        { "rel": "instances", "href": "/{{ type }}/" },
        { "rel": "delete", "href": "/{{ type }}/{id}" },
        { "rel": "edit", "href": "/{{ type }}/{id}" }
    ]
}
